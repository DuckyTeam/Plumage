{
  "name": "@ducky/plumage",
  "version": "3.0.0",
  "description": "Plumage is Ducky's design system",
  "main": "dist/cjs/plmg.cjs.js",
  "module": "dist/esm/plmg.js",
  "es2015": "dist/esm/plmg.js",
  "es2017": "dist/esm/plmg.js",
  "browser": "www/build/plmg.js",
  "types": "dist/types/index.d.ts",
  "collection": "dist/collection/collection-manifest.json",
  "collection:main": "dist/collection/index.js",
  "unpkg": "dist/plmg/plmg.esm.js",
  "files": [
    "dist/",
    "loader/",
    "www/"
  ],
  "scripts": {
    "build": "stencil build --docs",
    "start-stencil": "stencil build --dev",
    "start-stencil:watch": "stencil build --dev --watch",
    "lint": "eslint .",
    "prestart": "npm run start-stencil",
    "start": "concurrently -n stencil,storybook \"npm run start-stencil:watch\" \"npm run storybook\"",
    "test": "stencil test --spec --e2e",
    "test:watch": "stencil test --spec --e2e --watchAll",
    "generate": "node generate-component.js",
    "storybook": "start-storybook -p 6006 --no-dll -s ./www",
    "build-storybook": "build-storybook && cp -r ./www/build/ ./storybook-static/",
    "download-icons": "node ./scripts/icons/downloadIcons.mjs",
    "generate-icon-enum": "node scripts/icons/generateIconEnum.mjs",
    "pregenerate-icons": "npm run download-icons",
    "generate-icons": "node scripts/icons/generateCleanIconSvgs.mjs",
    "postgenerate-icons": "npm run generate-icon-enum"
  },
  "dependencies": {
    "@ducky/plumage-tokens": "^3.2.0"
  },
  "devDependencies": {
    "@axe-core/puppeteer": "~4.4.0",
    "@ducky/eslint-config-base": "^2.0.0",
    "@stencil/core": "^2.16.1",
    "@stencil/eslint-plugin": "~0.4.0",
    "@stencil/react-output-target": "^0.3.1",
    "@stencil/sass": "^1.5.2",
    "@storybook/addon-actions": "^6.3.8",
    "@storybook/addon-essentials": "^6.3.8",
    "@storybook/addon-knobs": "^6.3.1",
    "@storybook/addon-links": "^6.3.8",
    "@storybook/addons": "6.3.7",
    "@storybook/builder-webpack5": "^6.3.8",
    "@storybook/html": "^6.3.8",
    "@storybook/manager-webpack5": "6.3.7",
    "@storybook/web-components": "^6.3.8",
    "@types/jest": "^27.4.1",
    "@types/node": "^16.11.19",
    "@typescript-eslint/eslint-plugin": "^4.31.1",
    "@typescript-eslint/parser": "^4.31.2",
    "concurrently": "^6.2.1",
    "creevey": "0.7.36",
    "cross-fetch": "~3.1.5",
    "eslint": "^7.32.0",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-no-only-tests": "^2.6.0",
    "eslint-plugin-prettier": "^4.0.0",
    "fast-glob": "~3.2.11",
    "firebase": "~9.6.6",
    "fs-extra": "~10.0.1",
    "jest": "^27.5.1",
    "jest-cli": "^27.5.1",
    "prettier": "^2.4.1",
    "puppeteer": "~13.3.2",
    "rimraf": "~3.0.2",
    "sass": "^1.44.0",
    "storybook": "^6.3.8",
    "storybook-addon-designs": "^6.0.1",
    "svgo": "~2.8.0",
    "typescript": "^4.5.4"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DuckyTeam/Plumage.git"
  },
  "keywords": [
    "plumage",
    "design",
    "system",
    "ducky"
  ],
  "author": "development@ducky.eco",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/DuckyTeam/Plumage/issues"
  },
  "homepage": "https://github.com/DuckyTeam/Plumage#readme"
}
