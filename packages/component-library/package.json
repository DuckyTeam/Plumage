{
  "name": "@ducky/plumage",
  "version": "3.3.0",
  "description": "Plumage is Ducky's design system",
  "main": "dist/index.cjs.js",
  "module": "./dist/components/index.js",
  "es2015": "dist/esm/plmg.js",
  "es2017": "dist/esm/plmg.js",
  "types": "dist/types/index.d.ts",
  "collection": "dist/collection/collection-manifest.json",
  "collection:main": "dist/collection/index.js",
  "unpkg": "dist/plmg/plmg.esm.js",
  "files": [
    "dist/",
    "loader/",
    "www/"
  ],
  "scripts": {
    "build": "stencil build --docs",
    "start-stencil": "stencil build --dev",
    "start-stencil:watch": "stencil build --dev --watch",
    "lint": "eslint .",
    "prestart": "npm run start-stencil",
    "start": "concurrently -n stencil,storybook \"npm run start-stencil:watch\" \"npm run storybook\"",
    "test": "stencil test --spec --e2e",
    "test:watch": "stencil test --spec --e2e --watchAll",
    "generate": "node generate-component.js",
    "storybook": "storybook dev -p 6006 -s .././www",
    "build-storybook": "storybook build && cp -r ./www/build/ ./storybook-static/",
    "download-icons": "node ./scripts/icons/downloadIcons.mjs",
    "generate-icon-enum": "node scripts/icons/generateIconEnum.mjs",
    "pregenerate-icons": "npm run download-icons",
    "generate-icons": "node scripts/icons/generateCleanIconSvgs.mjs",
    "postgenerate-icons": "npm run generate-icon-enum"
  },
  "dependencies": {
    "@ducky/plumage-tokens": "^5.0.0",
    "uuid": "~9.0.1"
  },
  "devDependencies": {
    "@axe-core/puppeteer": "~4.4.0",
    "@babel/preset-env": "^7.23.3",
    "@babel/preset-react": "^7.23.3",
    "@babel/preset-typescript": "^7.23.3",
    "@ducky/eslint-config-base": "^4.1.0",
    "@stencil/core": "^2.19.0",
    "@stencil/eslint-plugin": "~0.4.0",
    "@stencil/react-output-target": "^0.5.3",
    "@stencil/sass": "^3.0.7",
    "@storybook/addon-actions": "^7.5.3",
    "@storybook/addon-essentials": "^7.5.3",
    "@storybook/addon-knobs": "^7.0.2",
    "@storybook/addon-links": "^7.5.3",
    "@storybook/addons": "7.5.3",
    "@storybook/html": "^7.5.3",
    "@storybook/html-webpack5": "^7.5.3",
    "@storybook/web-components-webpack5": "^7.5.3",
    "@types/jest": "27.0.3",
    "@types/node": "^20.9.0",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "concurrently": "^8.2.2",
    "creevey": "0.8.1",
    "cross-fetch": "~4.0.0",
    "eslint": "^8.53.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-no-only-tests": "^3.1.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-storybook": "^0.6.15",
    "fast-glob": "~3.3.2",
    "firebase": "~10.6.0",
    "fs-extra": "~11.1.1",
    "jest": "27.0.3",
    "jest-cli": "27.4.5",
    "prettier": "^3.1.0",
    "puppeteer": "~13.3.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "~5.0.5",
    "sass": "^1.69.5",
    "storybook": "^7.5.3",
    "storybook-addon-designs": "^6.3.1",
    "svgo": "~3.0.3",
    "typescript": "^5.2.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DuckyTeam/Plumage.git"
  },
  "keywords": [
    "plumage",
    "design",
    "system",
    "ducky"
  ],
  "author": "development@ducky.eco",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/DuckyTeam/Plumage/issues"
  },
  "homepage": "https://github.com/DuckyTeam/Plumage#readme"
}
