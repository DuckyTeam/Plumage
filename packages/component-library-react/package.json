{
  "name": "@ducky/plumage-react",
  "sideEffects": false,
  "version": "0.0.1",
  "private": true,
  "description": "Plumage is Ducky's design system; this is React wrapper",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DuckyTeam/Plumage.git"
  },
  "scripts": {
    "build": "npm run clean && npm run compile",
    "clean": "rm -rf dist",
    "compile": "npm run tsc",
    "tsc": "tsc -p .",
    "rollup": "rollup -c"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/"
  ],
  "devDependencies": {
    "@types/jest": "^26.0.24",
    "@types/node": "^15.12.2",
    "@types/react": "17.0.38",
    "@types/react-dom": "17.0.11",
    "jest": "^26.0.24",
    "jest-dom": "^3.0.2",
    "np": "^3.1.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "typescript": "^4.4.4"
  },
  "dependencies": {
    "@ducky/plumage": "^0.0.2"
  },
  "peerDependencies": {
    "react": "^16.7.0",
    "react-dom": "^16.7.0"
  },
  "jest": {
    "preset": "ts-jest",
    "setupTestFrameworkScriptFile": "<rootDir>/jest.setup.js",
    "testPathIgnorePatterns": [
      "node_modules",
      "dist"
    ]
  }
}
