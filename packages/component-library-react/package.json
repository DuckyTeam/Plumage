{
  "name": "@ducky/plumage-react",
  "sideEffects": false,
  "version": "3.0.0",
  "description": "Plumage is Ducky's design system; this is React wrapper",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DuckyTeam/Plumage.git"
  },
  "scripts": {
    "build": "npm run clean && npm run build:esm && npm run build:cjs",
    "clean": "rm -rf dist",
    "build:esm": "tsc -p . --module es2015 --outDir dist/esm",
    "build:cjs": "tsc -p . --module commonjs --outDir dist/cjs"
  },
  "main": "./dist/cjs/index.js",
  "types": "./dist/esm/index.d.ts",
  "module": "./dist/esm/index.js",
  "files": [
    "dist/"
  ],
  "devDependencies": {
    "@types/node": "^18.19.0",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "np": "^8.0.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "@ducky/plumage": "^5.0.0"
  },
  "peerDependencies": {
    "react": ">=18.2.0",
    "react-dom": ">=18.2.0"
  }
}
