{
  "name": "plumage",
  "version": "0.0.2",
  "description": "Plumage is Ducky's design system",
  "main": "dist/index.cjs.js",
  "module": "dist/custom-elements/index.js",
  "es2015": "dist/esm/index.mjs",
  "es2017": "dist/esm/index.mjs",
  "types": "dist/custom-elements/index.d.ts",
  "collection": "dist/collection/collection-manifest.json",
  "collection:main": "dist/collection/index.js",
  "unpkg": "dist/plmg/plmg.esm.js",
  "files": [
    "dist/",
    "loader/"
  ],
  "scripts": {
    "build": "stencil build --docs",
    "start-stencil": "stencil build --dev",
    "start-stencil-watch": "stencil build --dev --watch",
    "lint": "eslint .",
    "prestart": "npm run start-stencil",
    "start": "concurrently \"npm run start-stencil-watch\" \"npm run storybook\"",
    "test": "stencil test --spec --e2e",
    "test.watch": "stencil test --spec --e2e --watchAll",
    "generate": "stencil generate",
    "pretokens": "node ./src/tokens/fetch-tokens.js",
    "tokens": "style-dictionary build --config ./src/tokens/config.js",
    "storybook": "start-storybook -p 6006 --no-dll -s ./www",
    "build-storybook": "build-storybook"
  },
  "dependencies": {},
  "devDependencies": {
    "@ducky/eslint-config-base": "^2.0.0",
    "@stencil/core": "^2.7.0",
    "@storybook/addon-actions": "^6.3.8",
    "@storybook/addon-essentials": "^6.3.8",
    "@storybook/addon-knobs": "^6.3.1",
    "@storybook/addon-links": "^6.3.8",
    "@storybook/addons": "6.3.7",
    "@storybook/builder-webpack5": "^6.3.8",
    "@storybook/html": "^6.3.8",
    "@storybook/manager-webpack5": "6.3.7",
    "@storybook/web-components": "^6.3.8",
    "@typescript-eslint/eslint-plugin": "^4.31.1",
    "@typescript-eslint/parser": "^4.31.2",
    "concurrently": "^6.2.1",
    "creevey": "0.7.36",
    "cz-conventional-changelog": "^3.1.0",
    "dotenv": "^10.0.0",
    "eslint": "^7.32.0",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-no-only-tests": "^2.6.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^4.2.3",
    "lint-staged": "^10.0.7",
    "prettier": "^2.4.1",
    "storybook": "^6.3.8",
    "storybook-addon-designs": "^6.0.1",
    "style-dictionary": "^3.0.1",
    "typescript": "^4.4.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DuckyTeam/Plumage.git"
  },
  "keywords": [
    "plumage",
    "design",
    "system",
    "ducky"
  ],
  "author": "development@ducky.eco",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/DuckyTeam/Plumage/issues"
  },
  "homepage": "https://github.com/DuckyTeam/Plumage#readme",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix"
    ]
  }
}
